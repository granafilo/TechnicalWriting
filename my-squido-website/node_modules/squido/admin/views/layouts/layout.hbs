    <script src="https://cdnjs.cloudflare.com/ajax/libs/FlexSearch/0.6.22/flexsearch.min.js" integrity="sha512-KxRyF5OGyocY7+bOecICRkukb/F8P8yFO/86j3TZ8zxzL5nieFBJFFk0sd5aj387UfSOcSan4FJ86+ydH50nsw==" crossorigin="anonymous"></script>
    <script src="/public/javascripts/admin.js"></script>
  </head>
  <body>
    <header class="d-flex flex-column flex-md-row align-items-center px-md-4 bg-white border-bottom">
        <div class="h4 my-0 mt-1 me-md-auto brand">
          <a class="navbar-brand" href="/squido">
              <img src="/content/images/squido.svg" alt="" width="70" height="70" class="d-inline-block align-text-top">squido
          </a>
          <a href="#" class="float-end d-block d-sm-none" data-bs-toggle="collapse" data-bs-target="#sidebarMenu">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-list mb-1" viewBox="0 0 16 16">
              <path fill-rule="evenodd" d="M2.5 12a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5z"/>
            </svg>
          </a>
        </div>
        <nav class="my-2 my-md-0 me-md-3">
            <button class="p-2 btn btn-sm btn-danger" id="delete-post">Delete post</button>
            <button class="p-2 btn btn-sm btn-success" id="create-post">New post</button>
            <a class="p-2 text-dark" href="/squido">Home</a>
        </nav>
    </header>
    <main class="container-fluid">
      <div class="row">
        <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
          <div class="position-sticky pt-3">
              <ul class="nav flex-column">
                <li class="nav-item navbar-header">
                  <h3>Posts</h3>
                </li>
                <li class="nav-item mb-2">
                  <input type="text" class="form-control ds-input" id="search-input" placeholder="Search posts..." aria-label="Search docs for..." autocomplete="off" data-bd-docs-version="5.0" spellcheck="false" role="combobox" aria-autocomplete="list" aria-expanded="false" style="position: relative; vertical-align: top;">
                  <ul id="search-results" class="list-group" style="z-index: 999; position: absolute; width: 100%;"></ul>
                </li>
                {{#each (limit posts 10)}}
                <li class="nav-item">
                    <a class="nav-link" aria-current="page" href="/squido/{{this.id}}">
                    {{this.title}}
                    </a>
                </li>
                {{/each}}
              </ul>
          </div>
        </nav>
        <main class="col-md-9 ms-sm-auto col-lg-10 mt-3 px-md-4">
          {{{body}}}
        </main>
      </div>
    </main>
  </body>
</html>